page{
  font-family: "comic SanS MS"
}
.page-container{
  padding: 60rpx 30rpx;
}
.classify-title{
  line-height: 60rpx;
  font-size: 22px;
  font-weight: 600;
  color: #333
}
.classify-description{
  font-size: 12px;
  color: #666;
  margin-bottom: 80rpx;
}
.classify-container{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.classify-item{
  display:inline-block;
  width:115px;
  margin-bottom: 30rpx;
  text-align: center;
  padding: 0 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 14px;
  color:#333;
  border-radius: 500px;
  background-color: rgb(255, 255, 255);
  box-shadow: 0 4px 7px rgba(0, 0, 0, 0.16), 0 2px 6px rgba(0, 0, 0, 0.23);
  cursor: pointer; 
}

.classify-item_hover{
  background-color:#f1b506;
  color: #fff
}

