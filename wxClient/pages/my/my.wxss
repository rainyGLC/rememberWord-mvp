page{
  font-family: "comic SanS MS"
}
/*用户模块*/
.user-section{
  padding: 50rpx 40rpx;
  display: flex;
}
.user-section .user-nickName{
  flex: 1;
  font-size: 24px;
  line-height: 150rpx;
  color: #333;
}
.user-section .user-avatarUrl{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}
/*导航模块*/
.navigator-section{
  border-top: 20rpx solid #f5f5f5;
}
.navigator-item{
  display: flex;
  height: 118rpx;
  line-height: 118rpx;
  border-bottom: 2rpx solid #e4e4e4;
  padding: 0 40rpx;
}
.navigator-item .navigator-item-bd{
  flex: 1;
  font-size: 16px;
  color: #666;
}

.navigator-item-ft{
  color: #999;
  font-size: 14px;
}
.navigator-item-ft_in-access{
  position:relative;
}
.navigator-item-ft_in-access:after {
  content:" ";
  display:inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style:solid;
  transform: rotate(45deg);
  position: absolute;
  top: 50%;
  margin-top: -4px;
}
/*登录按钮*/
.login-btn{
  position: fixed;
  left: 50%;
  bottom: 60px;
  margin-left: -260rpx;
  width: 520rpx;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #57e9f1;
  color: #fff;
  font-size: 18px;
  border-radius: 0;
}
.login-btn_hover{
  opacity: .8;
}
.word-item-container{
  margin:25px 10px 0;
  width: 300px;
  border:1px solid #e4e4e4;
  background:#fff;
  background-color: rgb(255, 255, 255);
  box-shadow: 0 4px 7px rgba(0, 0, 0, 0.16), 0 2px 6px rgba(0, 0, 0, 0.23);
  overflow: hidden;
}
.word-title{
  position: relative;
  padding: 10px 15px;
  font-size: 12px;
  color:#666;
  line-height: 25px;
}
.word-title::before{
  content: '';
  display: inline-block;
  position: absolute;
  top:17px;
  left:2px;
  width: 8px;
  height: 8px;
  border:1px solid #f78fb3;
  border-radius: 50%;
}
.word-desc{
  display:inline-block;
  padding-left:10px;
  padding-bottom: 10px;
}
.word-desc-en{
  display: inline-block;
  font-size: 16px;
  color: #333;
  line-height:25px
}
.word-desc-chese{
  display: inline-block;
  font-size: 16px;
  line-height: 25px;


}
