page{
  font-family: "comic SanS MS"
}
.page-container{
  display: flex;
  flex-direction: column;
  background-color:#f5f5f5;
}
.word-item-container{
  margin:10px;
  width:290px;
  background:#fff;
  background-color: rgb(255, 255, 255);
  box-shadow: 0 4px 7px rgba(0, 0, 0, 0.16), 0 2px 6px rgba(0, 0, 0, 0.23);
  overflow: hidden;
}
.word-card{
  padding:10px;
}
.word-content{
  padding:0 10px;
  display: flex;
  justify-content: space-between;
}
.collect-image{
  width: 25px;
  height: 25px;
}
